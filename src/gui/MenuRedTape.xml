<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI name="menuRedTape">
    <GuiElement profile="fs25_menuContainer">
        <GuiElement profile="fs25_menuHeaderPanel">
            <Bitmap profile="fs25_menuHeaderIconBg">
                <Bitmap profile="fs25_menuHeaderIcon" id="categoryHeaderIcon"/>
            </Bitmap>
            <Text profile="fs25_menuHeaderTitle" id="categoryHeaderText"/>
            <RoundCorner profile="fs25_shopMoneyBoxBg" id="shopMoneyBoxBg"/>
            <BoxLayout profile="fs25_shopMoneyBox" id="shopMoneyBox">
                <Text profile="fs25_shopBalance" text="$l10n_ui_balance:"/>
                <Text profile="fs25_shopMoney" id="currentBalanceText"/>
            </BoxLayout>
        </GuiElement>
        <BoxLayout profile="fs25_subCategorySelectorTabbedBox" id="subCategoryBox">
            <Button profile="fs25_subCategorySelectorTabbedTab" id="subCategoryTabs[1]" text="$l10n_rt_header_overview" onClick="onClickOverview">
                <ThreePartBitmap profile="fs25_subCategorySelectorTabbedTabBg" name="background"/>
            </Button>
            <Button profile="fs25_subCategorySelectorTabbedTab" id="subCategoryTabs[2]" text="$l10n_rt_header_policies" onClick="onClickPolicies">
                <ThreePartBitmap profile="fs25_subCategorySelectorTabbedTabBg" name="background"/>
            </Button>
            <Button profile="fs25_subCategorySelectorTabbedTab" id="subCategoryTabs[3]" text="$l10n_rt_header_schemes" onClick="onClickSchemes">
                <ThreePartBitmap profile="fs25_subCategorySelectorTabbedTabBg" name="background"/>
            </Button>
            <Button profile="fs25_subCategorySelectorTabbedTab" id="subCategoryTabs[4]" text="$l10n_rt_header_tax" onClick="onClickTax">
                <ThreePartBitmap profile="fs25_subCategorySelectorTabbedTabBg" name="background"/>
            </Button>
            <Button profile="fs25_subCategorySelectorTabbedTab" id="subCategoryTabs[5]" text="$l10n_rt_header_eventlog" onClick="onClickEventLog">
                <ThreePartBitmap profile="fs25_subCategorySelectorTabbedTabBg" name="background"/>
            </Button>
        </BoxLayout>
        <ThreePartBitmap profile="fs25_lineSeparatorTopHighlighted" position="0px -57px"/>
        <MultiTextOption profile="fs25_subCategorySelectorTabbed" id="subCategoryPaging" position="0px -10px" onClick="updateSubCategoryPages"/>
        <GuiElement profile="fs25_subCategorySelectorTabbedContainer" id="subCategoryPages[1]">

        </GuiElement>
        <GuiElement profile="fs25_subCategorySelectorTabbedContainer" id="subCategoryPages[2]">
            <GuiElement position="0px -20px">
                <Text profile="rtLabelTopLeft" text="$l10n_rt_label_active_policies" position="0px 20px"/>
                <GuiElement id="activePoliciesContainer">

                    <SmoothList id="activePoliciesTable" profile="rt_table" position="20px -30px" size="400px 690px">
                        <ListItem profile="rtTableListItem">
                            <Text profile="rtListRowCellLeft" position="20px 0px" size="210px 32px" name="name"/>
                        </ListItem>
                    </SmoothList>

                    <ThreePartBitmap profile="rt_slider_box_left" position="440px -20px" size="6px 690px">
                        <Slider profile="fs25_listSlider" dataElementId="activePoliciesTable" />
                    </ThreePartBitmap>
                </GuiElement>

                <GuiElement id="noActivePoliciesContainer">
                    <Text profile="rt_header_top_left" text="$l10n_ui_noShopItems" position="0px -60px" width="350px" />
                    <ThreePartBitmap profile="fs25_contractsContentSeparator"/>
                </GuiElement>

                <Text profile="rt_header_top_left" text="$l10n_rt_header_compliance_tier" position="460px 20px" width="500px" />
                <GuiElement profile="fs25_contractsProgressBox" id="progressBox" position="480px -50px">
                    <Text profile="fs25_contractsContentTitle" id="complianceTier"/>
                    <Text profile="fs25_contractsContentValue" id="progressText"/>
                    <ThreePartBitmap profile="fs25_contractsProgressBarBg" id="progressBarBg">
                        <ThreePartBitmap profile="fs25_contractsProgressBar" id="progressBar"/>
                    </ThreePartBitmap>
                </GuiElement>

                <Text profile="rt_header_top_left" text="$l10n_rt_header_policy_information" position="460px -200px" width="500px" />
                <Text id="noSelectedPolicyText" profile="rt_header_top_left" text="$l10n_rt_header_no_selected_policy" position="460px -230px" width="500px" />
                
                <GuiElement id="policyInfoContainer">
                </GuiElement>

            </GuiElement>
        </GuiElement>
        <GuiElement profile="fs25_subCategorySelectorTabbedContainer" id="subCategoryPages[3]">
            <GuiElement position="0px -20px">
                <MultiTextOption profile="rt_scheme_display_switcher" id="schemeDisplaySwitcher" onClick="onSwitchSchemeDisplay" size="400px 32px" position="0px 10px"/>
                <!-- <Text profile="rtLabelTopLeft" text="$l10n_rt_label_available_schemes" position="0px 20px"/> -->
                <GuiElement id="schemesContainer">

                    <SmoothList id="schemesTable" profile="rt_table" position="20px -30px" size="400px 690px">
                        <ListItem profile="rtTableListItem">
                            <Text profile="rtListRowCellLeft" position="20px 0px" size="210px 32px" name="name"/>
                        </ListItem>
                    </SmoothList>

                    <ThreePartBitmap profile="rt_slider_box_left" position="440px -20px" size="6px 690px">
                        <Slider profile="fs25_listSlider" dataElementId="schemesTable" />
                    </ThreePartBitmap>
                </GuiElement>

                <GuiElement id="noSchemesContainer">
                    <Text profile="rt_header_top_left" text="$l10n_ui_noShopItems" position="0px -60px" width="350px" />
                    <ThreePartBitmap profile="fs25_contractsContentSeparator"/>
                </GuiElement>

                <!-- <Text profile="rt_header_top_left" text="$l10n_rt_header_compliance_tier" position="460px 20px" width="500px" />
                <GuiElement profile="fs25_contractsProgressBox" id="progressBox" position="480px -50px">
                    <Text profile="fs25_contractsContentTitle" id="complianceTier"/>
                    <Text profile="fs25_contractsContentValue" id="progressText"/>
                    <ThreePartBitmap profile="fs25_contractsProgressBarBg" id="progressBarBg">
                        <ThreePartBitmap profile="fs25_contractsProgressBar" id="progressBar"/>
                    </ThreePartBitmap>
                </GuiElement>

                <Text profile="rt_header_top_left" text="$l10n_rt_header_policy_information" position="460px -240px" width="500px" />
                <Text profile="rt_header_top_left" text="$l10n_rt_header_no_selected_policy" position="460px -270px" width="500px" /> -->

            </GuiElement>
        </GuiElement>
        <GuiElement profile="fs25_subCategorySelectorTabbedContainer" id="subCategoryPages[4]">


        </GuiElement>
        <GuiElement profile="fs25_subCategorySelectorTabbedContainer" id="subCategoryPages[5]">
            <GuiElement id="farmEventsContainer">
                <GuiElement profile="fs25_statisticsHeaderBox">
                    <Button profile="rtTableHeader" position="20px -20px" text="$l10n_rt_tableheader_timestamp" handleFocus="false" />
                    <Button profile="rtTableHeader" position="200px -20px" text="$l10n_rt_tableheader_eventtype" handleFocus="false" />
                    <Button profile="rtTableHeader" position="450px -20px" text="$l10n_rt_tableheader_detail" handleFocus="false" />
                </GuiElement>

                <SmoothList id="farmEventsTable" profile="rt_table" position="0px -50px" size="1480px 670px">
                    <ListItem profile="rtTableListItem">
                        <Text profile="rtListRowCellLeft" position="20px 0px" size="180px 32px" name="timestamp"/>
                        <Text profile="rtListRowCellLeft" position="200px 0px" size="250px 32px" name="eventType"/>
                        <Text profile="rtListRowCellLeft" position="450px 0px" size="600px 32px" name="detail"/>
                    </ListItem>
                </SmoothList>

                <ThreePartBitmap profile="rt_slider_box" position="0px -50px" size="6px 670px">
                    <Slider profile="fs25_listSlider" dataElementId="farmEventsTable" />
                </ThreePartBitmap>
            </GuiElement>

            <GuiElement id="noFarmEventsContainer">
                <Text profile="rt_header_top_center" text="$l10n_ui_noShopItems" position="0px -60px" width="350px" />
            </GuiElement>
        </GuiElement>
    </GuiElement>
</GUI>
