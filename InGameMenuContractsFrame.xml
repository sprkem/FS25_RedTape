            <margin value="5px 0 5px 0px"/>
            <imageSliceId value="noSlice"/>
            <imageFilename value="data/store/store_empty.png"/>
        </Profile>
        <Profile name="fs25_contractsVehiclesBoxMarquee" extends="baseReference" with="anchorBottomStretchingX">
            <height value="190px"/>
            <position value="0px 10px"/>
