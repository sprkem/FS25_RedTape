        <Profile name="fs25_contractsContractRewardValueNegative" extends="fs25_contractsContractRewardValue">
            <textColor value="$preset_fs25_colorOrangeDark"/>
        </Profile>
        <Profile name="fs25_contractsDetailsList" extends="emptyPanel" with="anchorTopCenter">
            <size value="100% 216px"/>
            <absoluteSizeOffset value="80px 0px"/>
            <position value="0px -200px"/>
            <handleFocus value="false"/>
        </Profile>
        <Profile name="fs25_contractsDetailsListItem" extends="baseReference" with="anchorTopStretchingX alternating">
            <height value="32px"/>
            <imageColor value="$preset_fs25_colorGrey"/>
            <alternateBackgroundColor value="$preset_fs25_colorGreyDark_50"/>
        </Profile>
        <Profile name="fs25_contractsDetailsListTitle" extends="fs25_textDefault" with="anchorTopLeft">
