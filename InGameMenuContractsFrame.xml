        <Profile name="fs25_contractsVehiclesBox" extends="emptyPanel" with="anchorStretchingYStretchingX">
            <alignmentX value="center"/>
            <alignmentY value="bottom"/>
        </Profile>
    </GUIProfiles>
</GUI>
