<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI name="ingameMenuContracts">
    <ThreePartBitmap profile="fs25_subCategoryContainerBg">
        <Bitmap profile="fs25_subCategoryContainerArrow"/>
    </ThreePartBitmap>
    <Bitmap profile="fs25_subCategoryContainer">
        <MultiTextOption profile="fs25_subCategorySelector" id="subCategorySelector" onClick="onChangeSubCategory" focusInit="onOpen"/>
        <BoxLayout profile="fs25_subCategorySelectorBox" id="subCategoryDotBox"/>
        <RoundCorner profile="fs25_subCategorySelectorDot" id="subCategoryDotTemplate"/>
        <GuiElement profile="fs25_subCategoryListContainer" id="contractsListBox">
            <Bitmap profile="fs25_subCategoryStartClipper" name="startClipper"/>
            <Bitmap profile="fs25_subCategoryStopClipper" name="endClipper"/>
            <SmoothList profile="fs25_subCategoryList" id="contractsList" listSectionHeader="section" startClipperElementName="startClipper" endClipperElementName="endClipper" emptyIndicatorId="noContractsText">
                <ListItem profile="fs25_subCategoryListItem">
                    <Bitmap profile="fs25_subCategoryListItemIcon" name="icon" imageSize="512 512"/>
                    <Text profile="fs25_subCategoryListItemName" name="field"/>
                    <Text profile="fs25_contractsListItemTime" name="time"/>
                    <Text profile="fs25_contractsListItemReward" name="reward"/>
                    <Text profile="fs25_contractsListItemIndicator" name="indicatorFinished" text="$l10n_contract_finished"/>
                    <Text profile="fs25_contractsListItemIndicator" name="indicatorFailed" text="$l10n_contract_failed"/>
                    <Text profile="fs25_contractsListItemIndicator" name="indicatorTimedOut" text="$l10n_contract_timedOut"/>
                    <Text profile="fs25_contractsListItemIndicator" name="indicatorCanceled" text="$l10n_contract_canceled"/>
                </ListItem>
                <ListItem profile="fs25_subCategoryListSectionHeader" name="section">
                    <Text profile="fs25_subCategoryListSectionHeaderTitle" name="title" text="Contracts Title"/>
                </ListItem>
            </SmoothList>
            <ThreePartBitmap profile="fs25_subCategoryListSliderBox">
                <Slider profile="fs25_listSlider" dataElementId="contractsList"/>
            </ThreePartBitmap>
        </GuiElement>
    </Bitmap>
    <GuiElement profile="fs25_menuContentContainer">
        <Text profile="fs25_contractsEmptyText" id="noContractsText" text="$l10n_contract_noContractsAvailable"/>
    </GuiElement>
    <GuiElement profile="fs25_menuContentContainer" id="contentContainer">
        <ThreePartBitmap profile="fs25_contractsContentSeparator"/>
        <GuiElement profile="fs25_menuHeaderPanel" position="0px 74px">
            <Bitmap profile="fs25_menuHeaderIconBg">
                <Bitmap profile="fs25_menuHeaderIcon" imageSliceId="gui.icon_ingameMenu_contracts"/>
            </Bitmap>
            <Text profile="fs25_menuHeaderTitle" text="$l10n_ui_contracts"/>
        </GuiElement>
        <GuiElement profile="fs25_contractsFarmerBox" id="farmerBox">
            <Bitmap profile="fs25_contractsFarmerImageGradient"/>
            <Bitmap profile="fs25_contractsFarmerImage" id="farmerImage"/>
            <Text profile="fs25_contractsFarmerName" id="farmerName"/>
        </GuiElement>
        <GuiElement profile="fs25_contractsContractBox" id="contractBox">
            <Text profile="fs25_contractsContractTitle" id="titleText"/>
            <Text profile="fs25_contractsContractInfoTitle" text="$l10n_ui_contractsInfo"/>
            <Text profile="fs25_contractsContractInfo" id="contractDescriptionText"/>
            <SmoothList profile="fs25_contractsDetailsList" id="detailsList">
                <ListItem profile="fs25_contractsDetailsListItem">
                    <Text profile="fs25_contractsDetailsListTitle" name="title"/>
                    <Text profile="fs25_contractsDetailsListInfo" name="info"/>
                </ListItem>
            </SmoothList>
            <Text profile="fs25_contractsContractReward" id="rewardTitle" text="$l10n_contract_reward:"/>
            <ThreePartBitmap profile="fs25_contractsContractRewardSeparator"/>
            <Text profile="fs25_contractsContractRewardValue" id="rewardText"/>
        </GuiElement>
        <GuiElement profile="fs25_contractsMapBox" id="mapBox">
            <Text profile="fs25_contractsContentTitle" text="$l10n_contract_position:" position="0px -30px"/>
            <InGameMapPreview profile="fs25_contractsIngameMap" id="ingameMap" onDrawPostIngameMapHotspots="onDrawPostIngameMapHotspots"/>
        </GuiElement>
        <GuiElement profile="fs25_contractsCollectRewardsBox" id="collectRewardsBox"/>
        <GuiElement profile="fs25_contractsProgressBox" id="progressBox">
            <Text profile="fs25_contractsContentTitle" text="$l10n_contract_progress:"/>
            <Text profile="fs25_contractsContentExtraText" id="extraProgressText"/>
            <Text profile="fs25_contractsContentValue" id="progressText"/>
            <ThreePartBitmap profile="fs25_contractsProgressBarBg" id="progressBarBg">
                <ThreePartBitmap profile="fs25_contractsProgressBar" id="progressBar"/>
            </ThreePartBitmap>
        </GuiElement>
        <GuiElement profile="fs25_contractsProgressBox" id="equipmentBox">
            <Text profile="fs25_contractsContentTitle" text="$l10n_ui_ingameMissionSpecs:"/>
            <Text profile="fs25_contractsContentText" id="useOwnEquipementText"/>
            <Bitmap profile="fs25_contractsVehiclesItem" id="vehicleTemplate"/>
            <GuiElement profile="fs25_contractsVehiclesBoxMarquee">
                <BoxLayout profile="fs25_contractsVehiclesBox" id="vehiclesBox"/>
            </GuiElement>
        </GuiElement>
    </GuiElement>
    <GUIProfiles>
        <Profile name="fs25_contractsContentSeparator" extends="fs25_lineSeparatorLeft">
            <width value="1dp"/>
            <position value="470px 0px"/>
            <absoluteSizeOffset value="0px 60px"/>
