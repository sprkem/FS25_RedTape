            <textVerticalAlignment value="bottom"/>
            <textColor value="$preset_fs25_colorMainHighlight"/>
            <textFocusedColor value="$preset_fs25_colorMainLight"/>
            <textHighlightedColor value="$preset_fs25_colorMainHighlight"/>
        </Profile>
        <Profile name="fs25_contractsListItemIndicator" extends="fs25_contractsListItemReward"/>
        <Profile name="fs25_contractsFarmerBox" extends="emptyPanel" with="anchorTopLeft">
            <size value="470px 346px"/>
        </Profile>
        <Profile name="fs25_contractsFarmerImageGradient" extends="baseReference" with="anchorTopCenter">
            <size value="340px 340px"/>
            <position value="0px -25px"/>
            <imageSliceId value="gui.grey_gradient"/>
        </Profile>
        <Profile name="fs25_contractsFarmerImage" extends="baseReference" with="anchorTopCenter">
            <size value="280px 280px"/>
            <position value="0px -25px"/>
            <imageSliceId value="noSlice"/>
            <imageUVs value="0 0 1 1"/>
            <imageSize value="512 512"/>
        </Profile>
        <Profile name="fs25_contractsFarmerName" extends="fs25_textDefault" with="anchorBottomStretchingX">
            <size value="100% 26px"/>
            <absoluteSizeOffset value="40px 0px"/>
            <textSize value="26px"/>
            <textBold value="false"/>
            <textUpperCase value="true"/>
            <textAlignment value="center"/>
        </Profile>
        <Profile name="fs25_contractsContractBox" extends="emptyPanel" with="anchorStretchingYLeft pivotTopLeft">
            <width value="470px"/>
            <absoluteSizeOffset value="0px 346px"/>
            <position value="0px -346px"/>
        </Profile>
        <Profile name="fs25_contractsContractTitle" extends="fs25_textDefault" with="anchorTopStretchingX">
            <size value="100% 40px"/>
            <textSize value="32px"/>
            <textBold value="true"/>
