            <textUpperCase value="true"/>
        </Profile>
        <Profile name="fs25_contractsContractInfo" extends="fs25_textGrey" with="anchorTopStretchingX">
            <size value="100% 60px"/>
            <absoluteSizeOffset value="80px 0px"/>
            <position value="0px -110px"/>
            <textMaxNumLines value="4"/>
            <textVerticalAlignment value="top"/>
        </Profile>
        <Profile name="fs25_contractsContractReward" extends="fs25_textDefault" with="anchorTopCenter">
